<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/greetingEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите приветствие" />

    <Button
        android:id="@+id/startSecondActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/greetingEditText"
        android:text="Отправить приветствие" />

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startSecondActivityButton"
        android:text="Здесь будет отображаться приветствие" />
</RelativeLayout>
